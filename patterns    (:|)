}
6)Again this one got me stuck :((((   tip- break it down into small parts
     *    
    ***
   *****
  *******
 *********
int main()
{
    int n=5;
 for(int i=0;i<n;i++)       ---------------------------> no of rows
 {
    for(int j=0;j<n-i;j++) ---------------------------->space
    {  
        cout<<" ";
    }
    for(int k=0;k<(2*i+1);k++)------------------------->star
    
        {
            cout<<"*";
        }
        for(int j=0;j<n-1;j++)-------------------------->space
        {
            cout<<" ";
        }
        cout<<endl;
 }
   return 0;
}
