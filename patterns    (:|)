int main()
{
    int n=5;
 for(int i=0;i<n;i++)
 {
    for(int j=0;j<i;j++)
    {  
        cout<<" ";
    }
    for(int k=0;k<(2*n-(2*i+1));k++)
    {
          cout<<"*";
        }
        for(int j=0;j<i;j++)
    {  
        cout<<" ";
    }
cout<<endl;
 }
return 0;
}







